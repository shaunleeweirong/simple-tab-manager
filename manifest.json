{
    "manifest_version": 3,
    "name": "Simple Tab Manager",
    "version": "1.0",
    "description": "Save and manage tab collections.",
    "permissions": [
      "tabs",      
      "storage"    
      
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "chrome_url_overrides": {
      "newtab": "newtab.html" 
    }
  }